<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.jeonjin_il.da.AdminUC5_1Activity">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:text="REGISTER LIFT"/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="FILL IN THE FORM"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/uc5_1edit1"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp" />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:text="LIFT NAME"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/uc5_1edit2"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp" />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:text="LIFT LEVEL"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/uc5_1edit3"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp" />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:text="LIFT LENGTH"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/uc5_1edit4"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp" />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:text="LIFT SPEED"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/uc5_1btn1"
        android:text="REGISTER"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp" />
</LinearLayout>
